<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:weightSum="1">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Picture Send Service"
            android:id="@+id/textView2"
            android:textColor="#ff3b17ff" android:textStyle="bold" android:textAlignment="center"
            android:textSize="25dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/restserviceURL" android:layout_weight="0.08"
            android:lines="2" style="@android:style/TextAppearance.DeviceDefault.Widget"
            android:text="http://192.168.1.2:8080"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take Picture"
            android:id="@+id/buttonPicture" android:layout_gravity="center_horizontal" android:onClick="execute"/>
</LinearLayout>