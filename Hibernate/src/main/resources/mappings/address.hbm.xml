<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field">
	<class name="be.groept.hibernate.exercise1.entities.Address" table="address">

		<id name="id" type="long" column="id" access="property">
			<generator class="native"/>
		</id>
		
		<property name="country" column="country"/>
		<property name="box" column="box"/>
		<property name="municipality" column="municipality"/>
		<property name="postalCode" column="postalCode"/>
		<property name="street" column="street"/>
		<property name="houseNumber" column="houseNumber"/>


	
	</class>
</hibernate-mapping>

