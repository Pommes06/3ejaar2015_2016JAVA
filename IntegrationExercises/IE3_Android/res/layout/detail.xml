<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/txtdetail1"
            android:text="Detailed problem description: "/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/txtprobdescr"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:text="Full adress:"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/txtfulladdress"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:text="ElectroDoctor repair information:"
            android:id="@+id/txtrepairinfolabel"/>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/txtrepairinfo"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/btback"/>
</LinearLayout>