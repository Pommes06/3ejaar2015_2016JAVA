<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView">
    <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id ="@+id/headerrow" android:background="#2bffffff" android:clickable="false">
            <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/headerColCity" android:text="City" android:textIsSelectable="false"
                    android:textSize="15dp" android:layout_marginRight="10dp"/>
            <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/headerColDevice" android:text="Device" android:textSize="15dp"
                    android:layout_marginRight="10dp"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/headerColProblemCode" android:text="Problem Code" android:textSize="15dp"
                    android:layout_marginRight="10dp"/>
            <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/headerColName" android:text="Name" android:textSize="15dp"
                    android:layout_marginRight="10dp"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/headerColProcessed" android:text="Processed" android:textSize="15dp"
                      android:layout_marginRight="0dp"/>
        </TableRow>
    </TableLayout>
    </ScrollView>
</LinearLayout>
