<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field">
	<class name="be.groept.ie4.entities.Product" table="product">

		<id name="product_id" type="long" column="PRODUCT_ID" access="property">
			<generator class="native"/>
		</id>

		<property name="shortname" column="SHORTNAME"/>
		<property name="name" column="NAME"/>
		<property name="numberInStock" column="NUMBERINSTOCK"/>
		<property name="price" column="PRICE"/>

	</class>
</hibernate-mapping>